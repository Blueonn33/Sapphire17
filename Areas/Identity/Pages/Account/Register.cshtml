@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<head>
    <link href="~/css/Register/RegisterStyles.css" rel="stylesheet" />
</head>

<div class="register-container mt-5 container">
    <div class="register-content-container">
        <h1 class="mb-5 register-heading">Регистрация</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Input.Name">Име</label>
                <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="John Doe" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password">Парола</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="**********" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword">Потвърди парола</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="**********" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="register-buttons-container mt-5">
                <button id="register-back" class="btn btn-lg register-back register-btn">Назад</button>
                <button id="register-submit" type="submit" class="btn btn-lg register-submit register-btn">Регистрация</button>
            </div>
        </form>
        <div class="register-image-container">
            <img src="~/Images/breakfast.png" class="img-fluid register-image"/>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
