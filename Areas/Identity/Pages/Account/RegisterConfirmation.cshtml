@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Потвърждаване на профила";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    @{
        if (@Model.DisplayConfirmAccountLink)
        {
            <p>
                <a id="confirm-link" href="@Model.EmailConfirmationUrl">Натисни тук за потвърждаване</a>
            </p>
        }
        else
        {
            <p>
                Please check your email to confirm your account.
            </p>
        }
    }
</div>


