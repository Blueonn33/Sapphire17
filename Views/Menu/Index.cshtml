                    <a class="menu-item-link fs-1" asp-action="Index" asp-controller="Set">
                        Колекции
                    </a>
                </div>
            </div>
            <div class="menu-item menu-advices mb-5">
                <div class="menu-item-image-container">
                    <img src="Images/LogoAdvices.png" class="menu-item-image me-5" />
                </div>
                <div class="menu-item-link-container">
                    <a class="menu-item-link fs-1" asp-action="Index" asp-controller="Advice">
                        Съвети
                    </a>
                </div>
            </div>
            <div class="menu-item menu-tests mb-5">
