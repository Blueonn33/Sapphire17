@using Microsoft.AspNetCore.Identity
@using Sapphire17.Areas.Identity.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<head>
    <link href="~/css/site.css" rel="stylesheet"/>
</head>
<body>
    <ul class="navbar-nav nav-profile">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-light fs-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Профил</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-light fs-4">Изход</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item me-3">
                <a class="nav-link text-light fs-4" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
            </li>
            <li class="nav-item me-3">
                <a class="nav-link text-light fs-4" asp-area="Identity" asp-page="/Account/Login">Вход</a>
            </li>
        }
    </ul>
</body>

